<Ui xmlns="http://www.blizzard.com/wow/ui/" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
                   ..\..\FrameXML\UI.xsd">

	<Script file="FrostboltMeterMain.lua"/>
	
	
	
	<Font name="AchieveLargeWhite" font="Fonts\MORPHEUS.ttf" virtual="true">
		<Shadow x="1" y="-1">
			<Color r="0" g="0.4" b="1"/>
		</Shadow>
		<Color r="1" g="1" b="1"/>
		<FontHeight>
			<AbsValue val="26"/>
		</FontHeight>
	</Font>

	<Font name="AchieveNormalWhite" font="Fonts\MORPHEUS.ttf" virtual="true">
		<Color r="1" g="1" b="1"/>
		<FontHeight>
			<AbsValue val="18"/>
		</FontHeight>
	</Font>

	<Font name="AchieveNormalBlue" font="Fonts\MORPHEUS.ttf" virtual="true">
		<Color r="0" g="0.7" b="0.8"/>
		<FontHeight>
			<AbsValue val="18"/>
		</FontHeight>
	</Font>

	<Frame name="FrostboltMeterMain" parent="UIParent" movable="true" enableMouse="true">

		<Scripts>
			<OnLoad> FrostboltMeterMain_OnLoad(self) </OnLoad>
			<OnEvent> FrostboltMeterMain_OnEvent(self, event, ...) </OnEvent>
			<OnEnter> FrostboltMeter_OnEnter(self) </OnEnter>
			<OnLeave> FrostboltMeter_OnLeave(self) </OnLeave>
		</Scripts>
		
		<Anchors>
			<Anchor point="TOP" relativeTo="UIParent"/>
		</Anchors>

		<Size>
			<AbsDimension x="124" y="28"/>
		</Size>

		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="false"/>

		<Layers>
			<Layer level="OVERLAY">
				<!-- FROSTBOLT ICON -->
				<Texture file="Interface\ICONS\Spell_Frost_Frostbolt02">
					<Size><AbsDimension x="25" y="25"/></Size>
					<Anchors>
						<Anchor point="LEFT" relativeT="$parent" relativePoint="LEFT"/>
					</Anchors>
				</Texture>
				<!-- FONT STRING TO HOLD THE ODOMTER NUMBERS-->
				<FontString name="FrostboltCount" inherits="NumberFontNormalLarge" >
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parent">
							<Offset><AbsDimension x="10" y="0"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Font String that appears when clicking bottom right reset button -->
				<FontString name="$parentResetText" hidden="true" inherits="GameFontNormal" text="Reset?">
					<Anchors>
						<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT">
							<Offset><AbsDimension x="0" y="0"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>

				<!-- Font string that appears in bottom left for 0 padding -->
				<FontString name="$parentZeroPadText" hidden="true" inherits="GameFontNormal" text="Pad Zeros?">
					<Anchors>
						<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
							<Offset><AbsDimension x="0" y="0"/></Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>	

		<Frames>

			<Button name="$parentZeroPad" hidden="true" enableMouse="true" inherits="UIPanelButtonTemplate">
				<Scripts>
					<OnLoad></OnLoad>
					<OnEvent></OnEvent>
					<OnClick> ZeroPadButton_OnClick() </OnClick>
					<OnEnter> FrostboltMeter_OnEnter(self) </OnEnter>
					<OnLeave> FrostboltMeter_OnLeave(self) </OnLeave>
				</Scripts>
				<Anchors>
					<Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="23" y="0"/></Offset>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="14" y="14"/>
				</Size>
			</Button>

			<Button name="$parentReset" hidden="true" enableMouse="true" inherits="UIPanelButtonTemplate">
				<Scripts>
					<OnLoad></OnLoad>
					<OnEvent></OnEvent>
					<OnClick> ResetButton_OnClick() </OnClick>
					<OnEnter> FrostboltMeter_OnEnter(self) </OnEnter>
					<OnLeave> FrostboltMeter_OnLeave(self) </OnLeave>
				</Scripts>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT"/>
				</Anchors>
				<Size>
					<AbsDimension x="14" y="14"/>
				</Size>
	
			</Button>

			<Button name="$parentZeroPadYes" hidden="true" enableMouse="true" inherits="UIPanelButtonTemplate"  text="Y">
				<Scripts>
					<OnLoad></OnLoad>
					<OnEvent></OnEvent>
					<OnClick>
						ZeroPadEnable();
						ZeroPadConfirm_Hide();
					</OnClick>
				</Scripts>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentZeroPad" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="0" y="-15"/></Offset>
					</Anchor>
					
				</Anchors>
				<Size>
					<AbsDimension x="22" y="22"/>
				</Size>
			</Button>

			<Button name="$parentZeroPadNo" hidden="true" enableMouse="true" inherits="UIPanelButtonTemplate"  text="N">
				<Scripts>
					<OnLoad></OnLoad>
					<OnEvent></OnEvent>
					<OnClick>
						ZeroPadDisable();
						ZeroPadConfirm_Hide();
					</OnClick>
				</Scripts>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentZeroPad" relativePoint="BOTTOMRIGHT">
						<Offset><AbsDimension x="-17" y="-15"/></Offset>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="22" y="22"/>
				</Size>
			</Button>


			<!-- The "YES" Button in case you are sure you want to reset your meter -->
			<Button name="$parentResetYes" hidden="true" enableMouse="true" inherits="UIPanelButtonTemplate"  text="Y">
				<Scripts>
					<OnLoad></OnLoad>
					<OnEvent></OnEvent>
					<OnClick>
						FrostboltMeter_ResetStats();
						ResetConfirm_Hide();
					</OnClick>
				</Scripts>
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="$parentReset" relativePoint="BOTTOMLEFT">
						<Offset><AbsDimension x="-7" y="-15"/></Offset>
					</Anchor>
					
				</Anchors>
				<Size>
					<AbsDimension x="22" y="22"/>
				</Size>
			</Button>

			<!-- The "NO" Button in case you don't want to reset your meter -->
			<Button name="$parentResetNo" hidden="true" enableMouse="true" inherits="UIPanelButtonTemplate" text="N">
				<Scripts>
					<OnLoad></OnLoad>
					<OnEvent></OnEvent>
					<OnClick>
						ResetConfirm_Hide();
					</OnClick>
				</Scripts>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="$parentReset" relativePoint="BOTTOMRIGHT">
						<Offset><AbsDimension x="-24" y="-15"/></Offset>
					</Anchor>
				</Anchors>
				<Size>
					<AbsDimension x="22" y="22"/>
				</Size>
			</Button>

			<Frame name="$parentAchievement" hidden="true" parent="FrostboltMeterMain" enableMouse="true" movable="true">
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="UIParent"/>
				</Anchors>
				<Size>
					<AbsDimension x="512" y="200"/>
				</Size>
				
				<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" tile="false"/>
				<Frames>
					<Button name="$parentClose" enableMouse="true" inherits="UIPanelButtonTemplate" text=" x">
						<Scripts>
						<OnLoad></OnLoad>
						<OnEvent></OnEvent>
						<OnClick>
							FrostboltMeterMainAchievement:Hide();
						</OnClick>
						</Scripts>
						<Anchors>
							<Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT">
								<Offset><AbsDimension x="0" y="0"/></Offset>
							</Anchor>
						</Anchors>
						<Size>
							<AbsDimension x="25" y="25"/>
						</Size>
					</Button>
				</Frames>

				<Layers>
					<Layer level="BORDER">
						<Texture file="Interface\ICONS\Spell_Frost_Frostbolt">
							<Size><AbsDimension x="49" y="49"/></Size>
							<Anchors>
								<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
									<Offset><AbsDimension x="2" y="99"/></Offset>
								</Anchor>
							</Anchors>
						</Texture>


					</Layer>

					<Layer level="ARTWORK">
						<Texture file="Interface\ExtraButton\GarrZoneAbility-MageTower">
							<Size><AbsDimension x="256" y="128"/></Size>
							<Anchors>
								<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
									<Offset><AbsDimension x="0" y="100"/></Offset>
								</Anchor>
							</Anchors>
						</Texture>

						<Texture name="AchieveTitle" file="Interface\QUESTFRAME\UI-QuestLogTitleHighlight">
							<Size><AbsDimension x="315" y="28"/></Size>
							<Anchors>
								<Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM">
									<Offset><AbsDimension x="0" y="0"/></Offset>
								</Anchor>
							</Anchors>
						</Texture>

						<FontString name="AchieveTitleString" inherits="AchieveLargeWhite" text="Frostbolts">
							<Anchors>
								<Anchor point="CENTER" relativeTo="AchieveTitle" relativePoint="CENTER">
									<Offset><AbsDimension x="10" y="0"/></Offset>
								</Anchor>
							</Anchors>
						</FontString>

						<FontString name="AchieveText" inherits="AchieveNormalBlue">
							<Size>
								<AbsDimension x="500" y="180"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER">
									<Offset><AbsDimension x="0" y="-6"/></Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>
			</Frame>

		</Frames>
	</Frame>
</Ui>